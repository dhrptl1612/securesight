// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Camera {
  id        Int       @id @default(autoincrement())
  name      String
  location  String
  incidents Incident[]
}

model Incident {
  id           Int      @id @default(autoincrement())
  type         String
  tsStart      DateTime
  tsEnd        DateTime
  thumbnailUrl String
  resolved     Boolean  @default(false)
  camera       Camera   @relation(fields: [cameraId], references: [id])
  cameraId     Int
}
